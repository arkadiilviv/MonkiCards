<Window x:Class="Monki.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monki.Admin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<TabControl>
			<TabItem Header="Decks">
				<Grid>
					<DataGrid ItemsSource="{Binding Decks}" 
							  SelectedItem="{Binding SelectedDeck, Mode=TwoWay}"
                              AutoGenerateColumns="True"
                              IsReadOnly="True">
						<DataGrid.InputBindings>
							<MouseBinding MouseAction="LeftDoubleClick"
										  Command="{Binding OpenCardsCommand}"/>
						</DataGrid.InputBindings>
					</DataGrid>
				</Grid>
			</TabItem>
			<TabItem Header="Users">
				<Grid>
					<DataGrid ItemsSource="{Binding Users}"
                              IsReadOnly="True"
							  AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
							<DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
							<DataGridTextColumn Header="Username" Binding="{Binding UserName}"/>
							<DataGridTextColumn Header="CreatedAt" Binding="{Binding CreatedAt}"/>
						</DataGrid.Columns>
					</DataGrid>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
