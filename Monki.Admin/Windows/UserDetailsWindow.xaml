<Window x:Class="Monki.Admin.Windows.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monki.Admin.Windows"
		xmlns:controls="clr-namespace:Monki.Admin.Controls"
        mc:Ignorable="d"
        Title="UserDetailsWindow" Height="450" Width="850">
	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Padding" Value="5"/>
		</Style>
		<Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Margin" Value="5"/>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="80"/>
			<RowDefinition Height="80"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<Border Grid.Column="0" Grid.Row="0">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Id:" 
						   FontWeight="Bold"
						   Grid.Column="0"/>
				<TextBox Text="{Binding Id, Mode=OneWay}" 
						 IsReadOnly="True" 
						 Grid.Column="1"/>
			</Grid>
		</Border>
		<Border Grid.Column="1" Grid.Row="0">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="User Name:" 
						   FontWeight="Bold"
						   Grid.Column="0"/>
				<TextBox Text="{Binding UserName, Mode=OneWay}" 
						 IsReadOnly="True" 
						 Grid.Column="1"/>
			</Grid>
		</Border>
		<Border Grid.Column="0" Grid.Row="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Email:" 
						   FontWeight="Bold"
						   Grid.Column="0"/>
				<TextBox Text="{Binding Email, Mode=OneWay}" 
						 IsReadOnly="True" 
						 Grid.Column="1"/>
			</Grid>
		</Border>
		<Border Grid.Column="1" Grid.Row="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>

				<TextBlock Text="Active:" 
							FontWeight="Bold"
							Grid.Column="0"
							Grid.Row="0"/>
				<CheckBox IsChecked="{Binding IsActive, Mode=OneWay}" 
							IsEnabled="False" 
							Grid.Column="1"
							Grid.Row="0"/>

				<TextBlock Text="Deleted:" 
						FontWeight="Bold"
						Grid.Column="2"
						Grid.Row="0"/>
				<CheckBox IsChecked="{Binding IsDeleted, Mode=OneWay}" 
						IsEnabled="False" 
						Grid.Column="4"
						Grid.Row="0"/>

				<TextBlock Text="Created:" 
						FontWeight="Bold"
						Grid.Column="0"
						Grid.Row="1"/>
				<TextBox Text="{Binding CreatedAt, Mode=OneWay}" 
						IsReadOnly="True" 
						Grid.Column="1"
						Grid.Row="1"/>

				<TextBlock Text="Updated:" 
						FontWeight="Bold"
						Grid.Column="2"
						Grid.Row="1"/>
				<TextBox Text="{Binding UpdatedAt, Mode=OneWay}" 
						IsReadOnly="True" 
						Grid.Column="3"
						Grid.Row="1"/>
			</Grid>
		</Border>

		<controls:DeckListControl DecksListVm="{Binding DecksListVm}"
									Grid.Row="2"
									Grid.Column="0"
									Grid.ColumnSpan="2"/>

		<Button Grid.Column="1" 
				Grid.Row="3" 
				HorizontalAlignment="Right" 
				Content="Import deck"
				Margin="10"
				Command="{Binding OpenImportWindowCommand}"/>
	</Grid>
</Window>
