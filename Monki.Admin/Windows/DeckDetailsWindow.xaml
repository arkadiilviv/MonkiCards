<Window x:Class="Monki.Admin.DeckDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monki.Admin"
        mc:Ignorable="d"
        Title="Cards" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>
		<ListBox ItemsSource="{Binding Cards}" 
                 SelectedItem="{Binding SelectedCard, Mode=TwoWay}"
                 Margin="10"
				 Grid.Column="0">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock Text="{Binding SideA}" FontWeight="Bold"/>
						<TextBlock Text="{Binding SideB}" TextWrapping="Wrap"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<ScrollViewer Margin="10" Grid.Column="1">
			<StackPanel>
				<TextBlock Text="Side A:" FontWeight="Bold"/>
				<TextBox Text="{Binding SelectedCard.SideA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
					 AcceptsReturn="True"
					 TextWrapping="Wrap"/>
				<TextBlock Text="Side B:" FontWeight="Bold" Margin="0,10,0,0"/>
				<TextBox Text="{Binding SelectedCard.SideB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
					 AcceptsReturn="True"
					 TextWrapping="Wrap"/>
				<TextBlock Text="Example A:" FontWeight="Bold" Margin="0,10,0,0"/>
				<TextBox Text="{Binding SelectedCard.ExampleA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
					 AcceptsReturn="True"
					 Height="100"
					 TextWrapping="Wrap"/>
				<TextBlock Text="Example B:" FontWeight="Bold" Margin="0,10,0,0"/>
				<TextBox Text="{Binding SelectedCard.ExampleB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
					 AcceptsReturn="True"
					 Height="100"
					 TextWrapping="Wrap"/>
				<TextBlock Text="User:" FontWeight="Bold" Margin="0,10,0,0"/>
				<TextBox Text="{Binding SelectedCard.Deck.User.UserName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
					 AcceptsReturn="True"
					 IsReadOnly="True"
					 TextWrapping="Wrap"/>
				<TextBlock Text="Created At:" FontWeight="Bold" Margin="0,10,0,0"/>
				<TextBox Text="{Binding SelectedCard.CreatedAt, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
					 AcceptsReturn="True"
					 IsReadOnly="True"
					 TextWrapping="Wrap"/>
				<TextBlock Text="Updated At:" FontWeight="Bold" Margin="0,10,0,0"/>
				<TextBox Text="{Binding SelectedCard.UpdatedAt, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
					 AcceptsReturn="True"
					 IsReadOnly="True"
					 TextWrapping="Wrap"/>

			</StackPanel>
		</ScrollViewer>
	</Grid>
</Window>
